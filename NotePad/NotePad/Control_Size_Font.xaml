<Window x:Class="NotePad.Control_Size_Font"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotePad"
        mc:Ignorable="d"
        Title="Control_Size_Font" Height="315" Width="480" ResizeMode="NoResize">
    <Grid>

        <DockPanel LastChildFill="False" Margin="10" Background="AliceBlue"/>
        <TextBlock Text="Размер текста: " Margin="10" HorizontalAlignment="Left" FontSize="25" FontWeight="Black"/>
        <TextBox HorizontalAlignment="Left" Margin="205,19,0,0" TextWrapping="Wrap" Text="Размер" VerticalAlignment="Top" Width="57" Height="20" x:Name="TxtSize"/>
        <Button x:Name="CLick_FontSize" Margin="267,19,130,260" Click="CLick_FontSize_Click" Content="OK"/>

    </Grid>
</Window>
